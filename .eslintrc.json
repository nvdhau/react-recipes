//to create: ./node_modules/.bin/eslint --init
//disable a rule: "linebreak-style":0 
{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "prettier",
        "airbnb"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "API_URL": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "arrow-parens": 0,
        "react/jsx-filename-extension": 0,   
        "react/require-default-props": 0,
        "linebreak-style": 0,
        "jsx-a11y/click-events-have-key-events": 0,
        "react/forbid-prop-types": 0,
        "jsx-a11y/no-noninteractive-element-interactions": 0,
        "react/jsx-props-no-spreading": 0,
        "object-curly-newline": 0 
    }
}